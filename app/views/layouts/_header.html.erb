    <header>
    <div class="container">
      <nav>
        <%= link_to image_tag("logo"), root_path%>
        <ul class="left">
          <li>
            <%= link_to "All Events", root_path %>
          </li>
        </ul>
        <ul class="right">
          <% if current_user %>
            <li>
              <%= link_to current_user.name.capitalize, current_user %>
            </li>
            <li>
              <%= button_to "Sign Out", session_path, method: :delete , form_class: "botao" %>
            </li>
          <% else %>
            <li>
              <%= link_to "Sign In", new_session_path, class: "button" %>
            </li>
            <li>
              <%= link_to "Sign Up", signup_path, class: "button" %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
    </header>
